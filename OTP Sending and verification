import os
import math
import random
import smtplib

# generation of otp
digit = "123456789"
otp_len = 5
otp = random.sample(digit , otp_len)
otps= "".join(otp)
print(otps)

#connecting with email id
s = smtplib.SMTP("smtp.gmail.com", 587)
s.starttls()

s.login("bhavya****@gmail.com", "wiigk*******")   #your email id and your password generated by google
emailid = input("Enter your email: ") # whom you wan to send otp

s.sendmail('bhavya****@gmail.com', emailid , otps)
print("OTP sent sucessfully")

# checking OTP
a = input("Enter Your OTP >>: ")
if a == otps:
    print("Verified")
else:
    print("Please Check your OTP again")

